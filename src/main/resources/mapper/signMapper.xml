<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.toy.mapper.SignMapper">
    <resultMap id="User" type="com.toy.model.User">
        <id column="USER_ID" property="user_id"/>
        <result column="PASSWORD" property="password"/>
        <result column="ROLE" property="role"/>
        <result column="REGDATE" property="regdate"/>
    </resultMap>

    <!--게시판 목록 총 숫자-->
    <select id="selectBoardListCount" parameterType="com.toy.model.User" resultMap="User">
        SELECT
            user_id,
            password,
            role,
            regdate
        FROM
            user
        WHERE
            1 = 1
        AND
            USER_ID = CONCAT('',#{searchText},'')
    </select>

</mapper>